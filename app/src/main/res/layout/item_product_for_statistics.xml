<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:background="@drawable/custom_border_bottom"
    android:orientation="horizontal"
    android:paddingHorizontal="4dp"
    android:paddingVertical="4dp">


        <TextView
            android:id="@+id/txtIndex"
            android:layout_width="28dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="4dp"
            android:textAlignment="center"
            android:text="1"
            android:textColor="@color/darkgray" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/sweet_dress"
            android:visibility="visible" />

        <TextView
            android:id="@+id/txtProductName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|start"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="2"
            android:lineSpacingExtra="4dp"
            android:paddingHorizontal="8dp"
            android:text="Nike Blazer 77 Jumbo Oil"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/txtSold"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="10"
            android:textAlignment="center"
            android:textColor="@color/text1" />

        <TextView
            android:id="@+id/txtNewPrice"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="399k"
            android:textAlignment="center"
            android:textColor="@color/secondary_color" />

        <TextView
            android:id="@+id/txtProductRevenue"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Doanh thu"
            android:textAlignment="center"
            android:textColor="@color/primary_color" />


</LinearLayout>
