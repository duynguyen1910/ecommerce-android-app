<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="20dp">
    <androidx.cardview.widget.CardView
        android:id="@+id/productImageImv"
        android:layout_width="160dp"
        android:layout_height="220dp"
        app:cardCornerRadius="8dp"
        android:layout_marginBottom="8dp"
      >
        <ImageView
            android:id="@+id/bookImageImv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@mipmap/product1" />
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_alignTop="@id/productImageImv"
        android:layout_alignEnd="@id/productImageImv"
        android:background="@drawable/star_tag_rounded"
        android:elevation="4dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="10dp"
        android:paddingVertical="3dp"
        android:paddingHorizontal="6dp">
        <ImageView
            android:layout_width="14sp"
            android:layout_height="14sp"
            android:src="@drawable/star_24" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4.8"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="12dp" />
    </LinearLayout>
    <TextView
        android:id="@+id/bookNameTv"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="A Magical Journey"
        android:layout_below="@id/productImageImv"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginBottom="2dp"/>
    <TextView
        android:id="@+id/authorBookTv"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="Comics"
        android:layout_below="@id/bookNameTv"
        android:textAlignment="textStart"
        android:textColor="@color/gray1"
        android:textSize="12sp" />
</RelativeLayout>
