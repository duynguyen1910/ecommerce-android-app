<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- First layer: the white background with light gray right border -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" />
            <stroke
                android:width="1dp"
                android:color="@android:color/darker_gray"
                android:dashGap="0dp"
                android:dashWidth="0dp" />
        </shape>
    </item>
    <!-- Second layer: white borders on the top, bottom, and left sides -->
    <item android:left="0dp" android:right="1dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" />
            <stroke
                android:width="1dp"
                android:color="@android:color/white"
                android:dashGap="0dp"
                android:dashWidth="0dp" />
        </shape>
    </item>
</layer-list>


